{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "FundooNote App",
        "description": "This app is build for storing notes",
        "license" : {
            "name": "MIT License",
            "url": "https://opensource.org/licenses/MIT"
        }        
    },
    "host": "localhost:5000",
    "tags": [
        {
            "name": "FundooNotes",
            "description": "API for user registration"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/registration": {
            "post": {
                "tags": [
                    "Registration"
                ],
                "description": "Create a new user in the FundooNotes App",
                "parameters": [
                    {
                        "name": "User Registration",
                        "in":"body",
                        "description": "User that we wants to create",
                        "schema": {
                            "$ref": "#/definitions/add"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "schema": {
                    "$ref": "#/definitions/add"
                },
                "responses": {
                    "201": {
                        "description": "User created successfully"
                    },
                    "409":{
                        "description": "User already exist"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "FundooNotes login"
                ],
                "description": "Login to FundooNotes",
                "parameters": [
                    {
                        "name": "login",
                        "in": "body",
                        "description": "User that we wants to login",
                        "schema": {
                            "$ref": "#/definitions/login"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "schema": {
                    "$ref": "#/definitions/login"
                },
                "responses": {
                    "200": {
                        "description": "logged in successfully"
                    },
                    "403": {
                        "description": "Please check user name or password and try again"
                    },
                    "400": {
                        "description": "login failed"
                    }
                }
            }
        },      
        "/forgotPassword": {
            "post": {
                "tags": [
                    "FundooNotes forgotPassword"
                ],
                "Summary": "user receives an email about link to reset password",
                "parameters": [
                    {
                        "name": "email",
                        "in": "body",
                        "schema": 
                        {
                            "$ref": "#/definitions/forgotPassword"
                        }
                    }        
                ],
                "responses": {
                    "200": {
                        "description": "Successful"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "505": {
                        "description": "Internal Error"
                    }
                }
            }
        },
        "/resetPassword": {
            "put": {
                "tags": [
                    "FundooNotes resetPassword"
                ],
                "Summarry": "reset password",
                "parameters": [
                    {
                        "name": "resetPassword",
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/resetPassword"
                        }
                    },
                    {
                        "name": "token",
                        "in": "header"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful"
                    },
                    "401": {
                        "description": "Unauthorized User"
                    },
                    "500": {
                        "description": "Internal Error"
                    }
                }
            }
        },
        "/notesCreate": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Create notes in FundooNotes",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "craete note"
                    },
                    {
                        "in": "header",
                        "name": "token",
                        "description": "an authorization token",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "note created successfully"
                    },
                    "400": {
                        "description": "failed to create note"
                    }
                }
            },
            "notesAll": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Get all notes from FundooNotes",
                "parameters": [
                    {
                        "in": "header",
                        "name": "token",
                        "description": "an authorization token",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "got all notes successfully"
                    },
                    "400": {
                        "description": "failed to get notes"
                    }
                }
            }
        },
        "/notes/{:noteId}":{
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of the person that we want to see",
                    "type":"string"
                }
            ],
            "put": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Update note in FundooNotes",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "update an existing note"
                    },
                    {
                        "in": "header",
                        "name": "token",
                        "description": "an authorization token",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "updated note successfully"
                    },
                    "400": {
                        "description": "failed to update note"
                    }
                }
            },
            "deleteNotes/:noteId": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "delete note from FundooNotes and change the value of trash to true",
                "parameters": [
                    {
                        "in": "header",
                        "name": "token",
                        "description": "an authorization token",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "deleted note successfully"
                    },
                    "400": {
                        "description": "failed to delete notes"
                    }
                }
            }
        }
    },
        "definitions": {
            "add": {
                "type": "object",
                "properties": {
                    "firstName": {
                        "type": "string",
                        "example": "Rekha"
                    },
                    "lastName": {
                        "type": "string",
                        "example": "Patil"
                    },
                    "email": {
                        "type": "string",
                        "example": "AbcdEfg.123@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "Password@12"

                    }
                }    
            },
            "login": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password" : {
                        "type": "string"
                    }
                }
            },
            "forgotPassword": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    }
                }
            },
            "resetPassword": {
                "type": "object",
                "properties": {
                    "password": {
                        "type": "string"
                    }
                }
            }

        }
}